<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="003-create-tickets-schema.xml" author="Alexandr Sanets">
        <createTable tableName="TICKETS">
            <column name="TICKET_ID" type="bigint(20)">
                <constraints primaryKey="true" nullable="false" unique="true"/>
            </column>
            <column name="USER_ID" type="bigint(20)"/>
            <column name="FILM_ID" type="bigint(20)"/>
            <column name="NUMBER_OF_SEAT" type="int(11)"/>
            <column name="COAST" type="int(11)"/>
            <column name="SAIL" type="bit(1)"/>
        </createTable>
        <addAutoIncrement tableName="TICKETS" columnName="TICKET_ID" columnDataType="bigint(20)"/>
    </changeSet>
</databaseChangeLog>